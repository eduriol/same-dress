    	"browser": true,
        "mocha": true,
        "meteor": true
  	},
    "rules": {
        "react/jsx-no-bind": "off"
    },
    "settings": {
    	"import/core-modules": [
    		"meteor/meteor",
    		"meteor/react-meteor-data",
    		"meteor/random",
    		"meteor/templating",
